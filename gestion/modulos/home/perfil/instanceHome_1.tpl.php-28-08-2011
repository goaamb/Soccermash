    $sMaritalStatus=$aProfile[0]->maritalStatus;	
else{  
	$sMaritalStatus=' - ';	
	$iCantCamposNulos++;
}
#skillfullLegHand
if(!empty($aProfile[0]->skillfullLegHand))
    $sSkillfullLegHand=$aProfile[0]->skillfullLegHand;	
else { 
	$sSkillfullLegHand=' - ';	
	$iCantCamposNulos++;
}

#namePosition
$sPos=Array();
$sPos = explode(",",$aProfile[0]->position);
$aUsuario['namePosition']=namePosition($sPos[0]);

if(!empty($aUsuario['namePosition']))
{
	if(sizeof($sPos)>2)
		for($i=1;$i<sizeof($sPos);$i++){
			$aUsuario['namePosition'].='/ '.namePosition($sPos[$i]);	
		}
}else{
	$aUsuario['namePosition']=' - ';	
	$iCantCamposNulos++;
}
}else{
	$sNick=' - ';
		$iCantCamposNulos++;
		$sClub=' - ';
		$iCantCamposNulos++;
	$sBeginContractDate=' - ';
	$iCantCamposNulos++; 
	$sEndingContractDate=' - ';
	$iCantCamposNulos++; 
	$sLastContractDate=' - ';
	$iCantCamposNulos++; 
	$sPassaport=' - ';		
	$iCantCamposNulos++; 
