function closeClub(){
var val2='-';
var asd='-';
	$("#club_finder").html('<a href="javascript:void(0);" class="editmode f3" onclick="javascript:finder1(\''+val2+'\',\''+asd+'\');" original-title="" style="background-color: rgb(234, 239, 232);">'+val2+'</a>');
}


function otherClub(){
	closeClub();
	$("#club_finder").html('<input type="text" class="f3bis" style="width:125px"></input><img src="img/check_edit_reposo.png" title="Save" onClick="javascript:save(\'f3bis\');">');
}
function finder1(val,place){
